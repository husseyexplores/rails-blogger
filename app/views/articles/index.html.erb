<h1 class="heading--primary">All Articles</h1>
<ul id="articles" class="articles">
  <% @articles.each do |article| %>

  <li class="articles__list-item">
    <figure>
      <div class="articles__list-item__img-container">
        <%= link_to article_path(article) do %>
          <% if article.image.exists? %>
            <%= image_tag article.image.url, alt: article.title %>
          <% else %>
            <svg class="placeholder" width="100%" height="100%" ></svg>
          <% end %>
        <% end %>
      </div>
      <figcaption>
          <div class="">
            <span class="articles__list-item__time"><%= Time.at(article.created_at).strftime("%d %B, %Y") %></span>
            <h4 class="articles__list-item__title">
              <%= link_to article.title, article_path(article),
              class: "articles__list-link", id: "article_#{article.id}" %>
            </h4>
            <p class="articles__list-item__excerpt"><%= article.body.truncate(80) %></p>
          </div>
      </figcaption>
    </figure>
  </li>

  <% end %>
</ul>