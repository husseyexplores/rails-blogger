<div class="comment__item">
  <div class="comment__header">
    <h4 class="h4 comment__author"><%= comment.author_name %></h4>
    <div class="comment__date">
      <div class="comment__date__later"><%= distance_of_time_in_words(comment.article.created_at, comment.created_at) %> later</div>
      <div class="comment__date__day"><%= Time.at(comment.created_at).utc.strftime("%d-%m-%Y") %></div>
      <div class="comment__date__time"><%= Time.at(comment.created_at).utc.strftime("%H:%M") %></div>
    </div>
    <% if logged_in? %>
    <div class="comment__delete-link">
      <%= link_to "delete", article_comment_path(@article, comment), method: :delete, data: {confirm: "Are you sure you want to delete this comment?" } %>
    </div>
    <% end %>
  </div>
  <div class="comment__body-wrapper"><%= comment.body %></div>
</div>