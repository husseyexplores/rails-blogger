<div class="container">
  <h1 class="heading--primary">Articles tagged with <%= @tag.name %></h1>

  <ul id="articles" class="articles">
    <% @tag.articles.each do |article| %>
      <li class="articles__list-item"> <%= link_to article.title, article_path(article), class: 
      "articles__list-link", id: "article_#{article.id}" %> </li>
    <% end %>
  </ul>

</div>